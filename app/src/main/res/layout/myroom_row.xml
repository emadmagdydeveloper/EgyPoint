<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/user_image_name"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/image_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_image_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/lastmsgDate"


        />
    <TextView
        android:id="@+id/lastmsgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/whit_gray"
        android:layout_below="@+id/user_image_name"
        android:layout_toRightOf="@+id/user_image_name"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>